<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InventoryActivity"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_info"
        android:layout_width="0dp"
        android:layout_height="200sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/inventory_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kì kiểm kê:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"

                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/period"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tổng kiểm kê tài sản"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/inventory_period"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintWidth_percent="0.8"
                android:breakStrategy="simple"
                android:hyphenationFrequency="full"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/inventory_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày kiểm kê:"
                app:layout_constraintTop_toBottomOf="@id/period"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/9/2024-22/9/2024"
                app:layout_constraintTop_toBottomOf="@id/period"
                app:layout_constraintLeft_toRightOf="@id/inventory_time"
                app:layout_constraintBottom_toBottomOf="@id/inventory_time"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_background"
        android:layout_marginTop="16dp"
        android:text="Kiểm kê"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:padding="12dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/historyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử kiểm kê"
        app:layout_constraintTop_toBottomOf="@id/button_inventory"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        />
    <HorizontalScrollView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/historyText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:stretchColumns="1,2,3,4,5">
            <TableRow>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="STT"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:layout_column="1"
                    android:padding="8dp"
                    android:background="@drawable/border"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Tên tài sản"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_column="1"
                    android:padding="8dp"
                    android:background="@drawable/border"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Loại"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_column="1"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:background="@drawable/border"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Ngày kiểm kê"
                    android:layout_width="90dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_column="1"
                    android:padding="8dp"
                    android:background="@drawable/border"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Trạng thái"
                    android:layout_width="80dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_column="1"
                    android:padding="8dp"
                    android:background="@drawable/border"/>
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="@id/table"
            app:layout_constraintRight_toRightOf="@id/table"
            app:layout_constraintTop_toBottomOf="@id/table"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>